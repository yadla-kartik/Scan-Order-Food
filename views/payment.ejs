<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UPI QR Code Generator</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 20px;
        }
        input, button {
            padding: 10px;
            margin: 10px;
            font-size: 16px;
        }
        #qrcode {
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <h2>UPI QR Code Generator</h2>
    
    <!-- Fixed UPI ID and Recipient Name -->
    <p><strong>Recipient:</strong> Aryan Pandey</p>
    <p><strong>UPI ID:</strong> 9039916275@ybl</p>

    <!-- Input Fields for Amount and Note -->
    <input type="number" id="amount" placeholder="Enter amount (optional)">
    <button onclick="generateQR()">Generate QR Code</button>

    <!-- QR Code Display -->
    <div id="qrcode"></div>

    <script>
        function generateQR() {
            // Fixed details
            const upiId = "9039916275@ybl"; 
            const recipientName = "Aryan Pandey";

            // Get user input
            let amount = document.getElementById("amount").value.trim();

            // Construct UPI URL with correct string interpolation
            let upiUrl = `upi://pay?pa=${upiId}&pn=${encodeURIComponent(recipientName)}&mc=1234&cu=INR`;
            if (amount) upiUrl += `&am=${amount}`;
            if (note) upiUrl += `&tn=${encodeURIComponent(note)}`;

            // Clear previous QR code
            document.getElementById("qrcode").innerHTML = "";

            // Generate QR code
            new QRCode(document.getElementById("qrcode"), {
                text: upiUrl,
                width: 200,
                height: 200
            });
        }
    </script>

</body>
</html>
