<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head.ejs') %>
  <title>Chef Dashboard</title>
  
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');
    body {
      margin: 0;
      padding: 0;
      font-family: 'Poppins', sans-serif;
      background-color: #f9f9f9;
    }
     body::-webkit-scrollbar {
    display: none;
  }

.navbar {
    background-color: #D8222F;
    padding: 10px 15px;
    color: white;
    display: flex;
    align-items: center;
    justify-content: left;
}

.logo {
    width: 60px;
    height: auto; 
    margin-right: 10px;
}

.nav-title {
    font-size: 23px;
}

.container{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 15px 0;
}

.card{
    width: 90%;
    display: flex;
    justify-content: space-evenly;
    flex-direction: column;
    border: 1px solid #ebdede;
    border-radius: 10px;
    text-align: left;
    padding: 15px;
    box-shadow: #d8222e34 0px 2px 8px 0px;
}


table {
    width: 100%;
    margin-top: 10px;
    border: 1px solid #ddd;
    border-radius: 10px;
    overflow: hidden;
    border-collapse: collapse;
}

table th, table td {
    padding: 8px;
    text-align: center;
    border-bottom: #b1b1b1 1px solid;
    text-align: left;
}

table th {
    border-bottom: #b1b1b1 1px solid;
}

.prepared{
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .done{
    border: none;
    border-radius: 25px;
    background-color: #D8222F;
    color: white;
    text-align: center;
    width: max-content;
    padding: 10px 20px;
    margin-top: 7px;
  }

  </style>
</head>
<body>
  <nav class="navbar">
    <img src="/Images/logo.png" alt="Scan N Order Logo" class="logo" width="70px">
    <span class="nav-title">SCAN N ORDER</span>
  </nav>
  <h3 style="text-align: left; margin-left: 15px; margin-top: 15px; font-weight: 600; font-size: 27px;">Chef Dashboard</h3>

<div class="container">
  <% users.forEach((user,index) => { %>
    <div class="card" id="user-<%= user._id %>">
      <div class="card-head">
        <p style="font-weight: 500;">Order No: <span style="font-weight: 300;"><%= 100 +  index %></span></p>
        <p style="font-weight: 500;">Customer Name: <span style="font-weight: 300;"><%= user.fullname %></span></p>
      </div>
      <div class="card-body">
        <% let userOrders = chefOrders.filter(order => String(order.createdBy) === String(user._id)); %>
        <% if (userOrders.length > 0) { %>
          <table class="table">
            <thead>
              <tr>
                <th>Item Name</th>
                <th>Qty</th>
              </tr>
            </thead>
            <tbody>
              <% userOrders.forEach(order => { %>
                <tr>
                  <td><%= order.name %></td>
                  <td><%= order.quantity %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>

          <div class="prepared">
            <button 
              class="done" 
              onclick="markAsDone('<%= user._id %>')" 
              id="btn-<%= user._id %>"
            >Completed</button>
          </div>
        <% } %>
      </div>
    </div>
  <% }) %>
</div>

<script>
  async function markAsDone(userId) {
    try {
      const response = await fetch('/markAsDone', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ userId })
      });
      if (response.ok) {
        // Disable the button and update text
        const btn = document.getElementById(`btn-${userId}`);
        btn.disabled = true;
        btn.innerText = "Completed";

        // Optional: remove card from DOM
        document.getElementById(`user-${userId}`).remove();
      } else {
        alert('Error updating status.');
      }
    } catch (err) {
      console.error(err);
      alert('Request failed.');
    }
  }
</script>


  <%- include('./partials/script.ejs') %>
</body>
</html>